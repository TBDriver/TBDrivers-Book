.card
  border-radius: $border-radius
  background-color: var(--widget-background-color)
  max-width: 100%
  transition: background-color 0.3s
  box-shadow: 2px 2px 4px var(--card-color)
.image-wrapper+.card // if post has banner, the post-card border-top-radius will be 0
  border-radius: 0 0 $border-radius $border-radius
.card +.card, .card +.archive-timeline
  margin-top: 1.5rem
// content style
.card-content, .card-author
  background-color: var(--widget-background-color)
  transition: background-color 0.3s
  padding: 1.5rem
.post-title, .card-excerpt
  margin-bottom: 0.8rem
.post-title
  font-size: 2.3rem
  font-weight: 450
  padding-bottom: 0.4rem
  padding-top: -2rem
  color: var(--title-color)
  //line-height: 1.125
.card-post-footer
  display: flex
  justify-content: space-between
  padding: 0
  a:hover
    color: var(--link-hover-color)
.nick
  padding: 0 2px
.post-meta, .post-meta-link
  color: var(--text-light-color)
  padding: 0 2px
  font-size 0.9rem
