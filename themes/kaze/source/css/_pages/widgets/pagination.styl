.nav
  display: flex
  flex-direction: row
  margin-top: 1.5rem
.nav-item-prev, .nav-item-next
  :hover{
    animation-delay: 2s;
    border-radius: solid var(--button-color);
    border-radius: 0.8rem 
    transition: .3s;
    background: var(--button-color)
  }
  transition: all 0.4s ease 0s;
  transition-delay: 1s;
  display: flex
  flex: 75%
.nav-next-icon
  margin-left: 0.7rem
.nav-prev-icon
  margin-right: 0.7rem
.nav-item-prev
  justify-content: flex-start
  text-align: left
.nav-item-next
  justify-content: flex-end
  text-align: right
.nav-link
  display: flex
  flex-direction: row
  align-items: center
  padding: 0 0.2rem
.nav-prev-icon, .nav-next-icon
  color: var(--text-light-color)
  width: 0.65rem
.nav-label
  transition: all 0.4s ease 0s;
  font-size: 1.4rem
  font-weight: 600
  line-height: 1.6rem
  color: var(--text-light-color)
.nav-title
  transition: all 0.4s ease 0s;
  font-size: 1rem
  font-weight: 500
  line-height: 1.2rem
  color: var(--text-color)